<div class="modal-dialog">
    {% block modal_precontent %}{% endblock modal_precontent %}
    {% block modal_content %}
        <div class="modal-content box">
            {% block modal_header %}
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title">{% block modal_title %}{% endblock modal_title %}</h4>
            </div>
            {% endblock modal_header %}
            <div class="modal-body" style="color:#444 !important; background-color:#fff !important;">
                {% if modal_alerts is defined %}
                    {% for type, alerts in modal_alerts %}
                        {% for alert in alerts %}
                            <div class="alert alert-{{ type }} fade in" style="margin: 0">
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                                {{ alert|raw }}
                            </div>
                        {% endfor %}
                    {% endfor %}
                {% endif %}
                {% block modal_body %}{% endblock modal_body %}
            </div>
            <div class="modal-footer text-right">
                {% block modal_footer %}{% endblock modal_footer %}
            </div>
        </div>
    {% endblock modal_content %}
    {% block modal_postcontent %}{% endblock modal_postcontent %}
</div>